<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundforall"
    tools:context=".RescueScreen">

    <Button
        android:id="@+id/rescue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rescuebackground"
        android:text="Rescue"
        android:textSize="24dp"
        android:gravity="center"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/edit_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_below="@id/rescue"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginLeft="100dp"
        android:text="Edit Your Details"
        android:textAllCaps="false" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:id="@+id/contact"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:layout_below="@id/edit_button"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:textStyle="bold"/>

</RelativeLayout>